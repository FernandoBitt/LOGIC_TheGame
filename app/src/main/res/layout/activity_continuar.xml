<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContinuarActivity">


    <TextView
        android:id="@+id/txtLogic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logic_n_the_game"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:id="@+id/SelectNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLogic" />

    <Button
        android:id="@+id/btnNovoJogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SelectNome"
        android:layout_marginTop="4dp"
        android:text="Continuar"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>